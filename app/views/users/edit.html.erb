<%= form_with model: @user, url: user_path(@user), local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :graduating_class %>
    <%= f.text_field :graduating_class, class: 'input input-bordered w-full max-w-xs m-4' %>
  </div>

  <div class="form-group">
    <%= f.label :nicknamename %>
    <%= f.text_field :nickname, class: 'input input-bordered w-full max-w-xs m-4' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

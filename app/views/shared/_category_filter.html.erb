<%= form_with url: posts_path, method: :get, local: true do |form| %>
  <div class="flex flex-row">
    <%= form.collection_select :category_id, Category.all.order(id: :asc), :id, :name, { prompt: t('defaults.message.select_default') }, selected: @selected_category_id, class: "select select-bordered select-primary select-sm w-40 max-w-xs" %>
    <%= form.submit t('defaults.filter'), class: "btn btn-primary ml-2 btn-sm" %>
  </div>
<% end %>
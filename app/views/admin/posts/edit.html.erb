<div class="ml-5">
  <%= form_with model: @post, url: admin_post_path(@post), local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :graduating_class %>
      <%= f.text_field :graduating_class, class: 'input input-bordered w-5/6  m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'input input-bordered w-5/6  m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :contact %>
      <%= f.text_field :contact, class: 'input input-bordered w-5/6  m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :app_name %>
      <%= f.text_field :app_name, class: 'input input-bordered w-5/6  m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :app_url %>
      <%= f.text_field :app_url, class: 'input input-bordered w-5/6  m-4', size:"70x5" %>
    </div>
    <div class="form-group">
      <%= f.label :github_url %>
      <%= f.text_field :github_url, class: 'input input-bordered w-5/6  m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :usage_technology %>
      <%= f.text_field :usage_technology, class: 'textarea textarea-bordered textarea-sm w-5/6 m-4 h-24 overflow-x-auto' %>
    </div>
    <div class="form-group">
      <%= f.label :points_for_effort %>
      <%= f.text_field :points_for_effort, class: 'textarea textarea-bordered textarea-sm w-5/6  m-4 h-24' %>
    </div>
    <div class="form-group">
      <%= f.label :target_users %>
      <%= f.text_field :target_users, class: 'textarea textarea-bordered textarea-sm w-5/6  m-4 h-24' %>
    </div>
    <div class="form-group">
      <%= f.label :pain_point %>
      <%= f.text_field :pain_point, class: 'textarea textarea-bordered textarea-sm w-5/6  m-4 h-24' %>
    </div>
    <div class="form-group">
      <%= f.label :remedy %>
      <%= f.text_field :remedy, class: 'textarea textarea-bordered textarea-sm w-5/6  m-4 h-24' %>
    </div>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment, class: 'textarea textarea-bordered textarea-sm w-5/6  m-4 h-24' %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
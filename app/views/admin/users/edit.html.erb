<div class="ml-5">
  <%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :graduating_class %>
      <%= f.text_field :graduating_class, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <div class="form-group">
      <%= f.label :role %>
      <%= f.select :role, User.roles_i18n.invert, {}, class: 'input input-bordered w-full max-w-xs m-4' %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
<div class="chat-bubble chat-bubble-accent mb-2">
  <h3 class="font-bold">
    <%= comment.user.graduating_class&.to_s + t('defaults.graduating_class') %>&emsp;
    <%= comment.user.nickname&.to_s %>
  </h3>
  <div id="js-comment-<%= comment.id %>">
    <%= simple_format(comment.body) %>
  </div>
  <% if current_user.own?(comment) %>
    <%= button_to t('posts.show.delete'), comment_path(comment), method: :delete, data: { confirm: t('defaults.message.Are_you_sure') }, class:"btn btn-circle btn-sm" %>
  <% end %>
</div>
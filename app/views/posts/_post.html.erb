<div class="flex-auto w-full lg:w-1/3 p-2">
  <div class="card w-auto bg-base-100 shadow-xl m-2 border-4 border-indigo-300/75">
  <% if post.site_image.present? %>
    <%= image_tag(post.site_image, class: "w-full h-64") %>
  <% else %>
    <div class="w-full h-64 bg-gray-200"></div>
  <% end %>
    <div class="card-body collapse">
      <input type="checkbox" />
      <div class="collapse-title font-medium">
        <div class="card-title"><%= post.app_name %></div>
        <p class="card-actions justify-end font-bold">
          <%= post.graduating_class %>æœŸ&nbsp;&nbsp;
          <%= post.name %>
        </p>
        <% if post.members.present? %>
          <div class="font-bold"><%= post.members %></div>
        <% end %>
        <div class="link link-secondary font-bold">
          <%= t('defaults.show') %>
        </div>
      </div>
      <div class="collapse-content break-all">
        <div class="badge badge-neutral badge-outline"><%= t('defaults.usage_technology') %></div><div><%= post.usage_technology %></div>
        <div class="badge badge-neutral  badge-outline"><%= t('defaults.points_for_effort') %></div><div class="break-all"><%= raw Rinku.auto_link(post.points_for_effort) %></div>
        <div class="badge badge-neutral  badge-outline"><%= t('defaults.target_users') %></div><div><%= simple_format(post.target_users) %></div>
        <div class="badge badge-neutral  badge-outline"><%= t('defaults.pain_point') %></div><div><%= simple_format(post.pain_point) %></div>
        <div class="badge badge-neutral  badge-outline"><%= t('defaults.remedy') %></div><div><%= simple_format(post.remedy) %></div>
        <div class="badge badge-neutral  badge-outline"><%= t('defaults.comment') %></div><div class="break-all"><%= simple_format(post.comment) %></div>
      </div>
      <div class="flex flex-row mt-5">
        <%= link_to t('defaults.cta'), post.app_url, target: '_blank', class:"btn btn-sm btn-secondary mr-1" %>
        <%= link_to t('defaults.watch_code'), post.github_url, target: '_blank', class:"btn btn-sm btn-outline mr-1" %>
      </div>
      <%= link_to t('defaults.post_comment'), post_path(post), class:"btn btn-sm btn-primary mt-2" %>
    </div>
  </div>
</div>
